<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" type="text/css" href="~/Css/Mediaquery.css" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

        <!--    CHAT GENERAL     -->
        <link rel="stylesheet" type="text/css" href="~/Css/ChatGeneral.css">         
        <script type="text/javascript" src="~/Js/jquery.min.js"></script>
        <script>
            $(document).ready(function () {

                /*****************Opcion para ocultar y mostrar el div*******************/
                $("#enlaceIn").click(function () {
                    $("#content").show();
                    $("#enlaceIn").hide();
                    $("#enlaceOut").show();
                });
                $("#enlaceOut").click(function () {
                    $("#content").hide();
                    $("#enlaceOut").hide();
                    $("#enlaceIn").show();
                });

                /**************Codigo para ocultar el div cuando se haga click en 
                 *              cualquier otro lado del documento****************/

                $(document.body).click(function (e) {
                    var $box = $('#content');
                    if (e.target.id !== 'content' && e.target.id !== 'enlaceIn' && !$.contains($box[0], e.target)) {
                        $("#content").hide();
                        $("#enlaceOut").hide();
                        $("#enlaceIn").show();
                    }
                });
            });
        </script>
        <!-- FIN CHAT GENERAL    -->

    </head>
    <body>
        <header>
            <!---->
            <div class="content-wrapper">
                <div class="titulo">
                    PLATAFORMA VIRTUAL
                </div>                                
            </div>
            <div class="divImagen">
                <img  class="imagenindex" src="~/Image/ro2.png" />
            </div>
            <div class="float-right">                    
                <nav>
                    <ul class="menu">
                        <li class="menu1">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="menu2">@Html.ActionLink("About", "About", "Home")</li>
                        <li class="menu3">@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li class="menu4">@Html.ActionLink("Cursos", "cursos", "VistasProyecto")</li>
                    </ul>
                </nav>
            </div>
        </header>
        <div id="body">
             @RenderSection("featured", required: false)            
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <!--<div class="imgflotante"><img src="~/Image/robotLeft.png" style="position:relative; height:120px; width:90px;"></div>-->
